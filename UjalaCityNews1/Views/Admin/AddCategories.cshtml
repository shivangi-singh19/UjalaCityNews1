
@model UjalaCityNews1.Models.Categories
@{
    ViewBag.Title = "AddCategories";
    Layout = "~/Views/Shared/_Admin1.cshtml";
    var tile = Model?.Id == 0 ? "Add" : "Update";
    var isActive = Model.IsActive ? "checked" : "";
    var IsActiveForHome = Model.IsActiveForHome ? "checked" : "";
}

<div class="page-header">
    <div class="page-title">
        <h4>@tile Post</h4>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form id="CategoryForm">
            <input type="hidden" value="@Model.Id" name="Id" />
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label>Category Name</label>
                        <input required class="form-control" name="Name" value="@Model.Name" />
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" @isActive name="IsActive" id="IsActive">
                            <label class="form-check-label" for="IsActive">
                                Is Active
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" @IsActiveForHome name="IsActiveForHome" id="IsActiveForHome">
                            <label class="form-check-label" for="IsActiveForHome">
                                Show On Home
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <button class="btn btn-submit me-2" id="SubmitCategory">Submit</button>
                    <button class="btn btn-cancel">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>






