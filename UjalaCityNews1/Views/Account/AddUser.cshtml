
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_Admin1.cshtml";
}

<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Add User</h4>
            <h6>Create new user</h6>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <form id="btnAddUserForm">
                <div class="row">
                    <div class="col-lg-4 col-sm-12 col-12">
                        <div class="form-group">
                            <label>Username</label>
                            <input required type="text" name="username" id="username" />
                            <small class="text-danger username" style="display:none">Username is required</small>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-12 col-12">
                        <div class="form-group">
                            <label>Email</label>
                            <input required type="text" name="email" id="email" />
                            <small class="text-danger email" style="display:none">Email is required</small>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-12 col-12">
                        <div class="form-group">
                            <label>Password</label>
                            <input required type="password" name="password" id="password" />
                            <small class="text-danger password" style="display:none">Password is required</small>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <button id="btnAddUser" class="btn btn-submit me-2">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

