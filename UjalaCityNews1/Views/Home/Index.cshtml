@model UjalaCityNews1.Models.HomeIndexContent
@{
    ViewBag.Title = "Home Page";
}


<section class="bg-accent section-space-bottom-less4">
    <div class="container">
        <div class="row tab-space2">
            <div class="col-md-8 col-sm-12 mb-4">
                <div class="main-slider1 img-overlay-slider">
                    <div class="bend niceties preview-1">
                        <div id="ensign-nivoslider-3" class="slides">
                            @if (Model.HomeSlider.Any())
                            {
                                for (var i = 0; i < Model.HomeSlider.Count; i++)
                                {
                                    <img src="@Model.HomeSlider[i].ImagePath" alt="slider" title="#slider-direction-@i" />
                                }
                            }
                        </div>
                        @if (Model.HomeSlider.Any())
                        {
                            for (var i = 0; i < Model.HomeSlider.Count; i++)
                            {
                                <div id="slider-direction-@i" class="t-cn slider-direction">
                                    <div class="slider-content s-tb slide-1">
                                        <div class="title-container s-tb-c">
                                            <div class="text-left pl-50 pl20-xs">
                                                <div class="post-date-light d-none d-sm-block">
                                                    <ul>
                                                        <li>
                                                            <span>
                                                                <i class="fa fa-calendar" aria-hidden="true"></i>
                                                            </span>@Model.HomeSlider[i].DateString
                                                        </li>
                                                    </ul>
                                                </div>
                                                @*<div class="slider-title"><a href="/home/index/@Model.HomeSlider[i].TitleSlug"></a>@Model.HomeSlider[i].Title</div>*@
                                                <div class="slider-title">@Model.HomeSlider[i].Title</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                <div class="img-overlay-70 img-scale-animate mb-4">
                    <div class="mask-content-sm">
                        <h3 class="title-medium-light" style="color:blueviolet">
                            <a href="details.aspx">Jagran Exclusive: IMD के विज्ञानी से जानें दिल्ली में अगले 5 दिन कैसा रहेगा मौसम, क्या अगस्त में घटेगी बारिश?</a>
                        </h3>
                    </div>
                    <img src="~/Content/img/news/news118.jpg" alt="news" class="img-fluid width-100">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- More Area Start Here -->
@if (Model.PostCatWise.Any())
{
    foreach (var cat in Model.PostCatWise)

    {
        <section class="bg-body section-space-less30">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="topic-border color-hollywood-cerise mb-30">
                            <div class="topic-box-lg color-hollywood-cerise">@cat.CategoryItem</div>
                        </div>
                        <div class="row">
                            @foreach (var innerItem in cat.Posts)
                            {
                                <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                                    <div class="mb-25">
                                        <a class="img-opacity-hover" href="single-news-1.html">
                                            <img src="@innerItem.ImagePath" alt="news" class="img-fluid width-100 mb-15">
                                        </a>
                                        <h3 class="title-medium-dark size-s" style="font-size:13px">
                                            <a href="/Home/News/@innerItem.Slug">@innerItem.EnglishTitle</a>
                                        </h3>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
}
